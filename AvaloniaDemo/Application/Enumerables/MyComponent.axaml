<UserControl x:Class="Application.Enumerables.MyComponent"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:enumerables="clr-namespace:Application.Enumerables"
             mc:Ignorable="d"
             Zzz="asdf"
             d:DataContext="{d:DesignInstance enumerables:MyComponent}">
    <StackPanel>
        <TextBlock Text="{Binding ContentEnumerable.Count, Mode=OneWay}" />
        <TextBlock Text="{Binding Zzz}" />
    </StackPanel>
</UserControl>